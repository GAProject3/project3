<%= form_for @task do |f| %>
  <%= f.label :title, 'Title'%>
  <%= f.text_field :title, 'Title', placeholder:'Title'%>
  <%= f.hidden_field :user_id, value:session[:user_id]%>
  <%= f.label :content, 'Content'%>
  <%= f.text_field :content, placeholder: 'Content' %>
  <%= f.label :duedate, 'Duedate'%>
  <%= f.date_field :duedate %>
  <%= f.label :location, 'Location'%>
  <%= f.text_field :location, placeholder:'Location'%>
  <%= f.submit %>
<% end %>